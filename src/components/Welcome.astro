---
import { EmailTrack } from './EmailTrack.tsx';
import { LinkTrack } from './LinkTrack.tsx';
import NotionBlock from './NotionBlock.astro';
---

<main class="overflow-x-hidden mb-20">
    <div id="scrolldown-icon" class="scrolldown-icon">
        <div class="chevrons">
            <div class="chevronDown"></div>
            <div class="chevronDown"></div>
        </div>
    </div>
    <section
        class="intro-container container mx-auto place-content-center grid place-items-center h-screen"
    >
        <div>
            <h1>madpiece</h1>
            <h2>creative label</h2>
        </div>
    </section>

    <section
        class="description container max-w-4xl mx-auto px-10 space-y-20 mt-20 place-content-center"
    >
        <article class="we-container">
            <p>
                We are the multi-disciplinary collective developing the ideas
                behind the creative label madpiece.
            </p>

            <NotionBlock />
            <p>
                Join us or pitch your idea <LinkTrack
                    client:load
                    href="https://airtable.com/appZ5ENG6d8cwvvoA/pagZjyp3oPHv0KSge/form"
                    class="underline"
                    captureEvent="joinUs_clicked">here</LinkTrack
                >.
            </p>
            <p class="we-for_companies mt-10">
                For collaborations and commissioned projects -
                <EmailTrack client:load>collab&#64;madpiece&#46;com</EmailTrack>
            </p>
        </article>

        <article class="manifesto-container">
            <h1>Manifesto</h1>
            <div>
                <h3>People first</h3>
                <p>
                    Every person affected by our work matters â€” team members,
                    users, clients and communities.
                </p>
            </div>
            <div>
                <h3>Always start with why (not)</h3>
                <p>
                    Question everything, understand the purpose, match the
                    values.
                </p>
            </div>
            <div>
                <h3>Critical thinking over opinions</h3>
                <p>
                    Always open to being proven wrong and learning based on
                    facts.
                </p>
            </div>
            <div>
                <h3>Social impact over individual profits</h3>
                <p>Greater good for the people and the climate.</p>
            </div>
            <div>
                <h3>No place for comfort</h3>
                <p>
                    Growth and disruption happen at the edge of our comfort
                    zone.
                </p>
            </div>
            <div>
                <h3>Walk the talk</h3>
                <p>If we commit to something, we see it through to the end.</p>
            </div>
            <div>
                <h3>Work hard, play hard</h3>
                <p>
                    While working, we do our best. Afterwards, we enjoy the
                    offline life.
                </p>
            </div>
            <div>
                <h3>Break until it's unbreakable</h3>
                <p>Good enough isn't good enough. Never settle!</p>
            </div>
            <div>
                <h3>Think big, start small</h3>
                <p>Minimalism, low-tech and offline first.</p>
            </div>
            <div>
                <h3>Profits for everyone involved</h3>
                <p>
                    10% for the idea, 80% for the active team, 10% for the
                    company (for expenses and supporting more social projects).
                </p>
            </div>
        </article>
    </section>
</main>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const scrollDownIcon = document.getElementById('scrolldown-icon');
        if (!scrollDownIcon) return;

        const toggleIcon = () => {
            const atTop = window.scrollY <= 100;
            scrollDownIcon.style.opacity = atTop ? '0.5' : '0';
        };

        toggleIcon();

        window.addEventListener('scroll', toggleIcon, { passive: true });

        scrollDownIcon.addEventListener('click', () => {
            const target = document.querySelector('.we-container');
            if (!target) return;

            const rect = target.getBoundingClientRect();
            const targetCenterOffset =
                rect.top +
                window.scrollY -
                (window.innerHeight - rect.height) / 2;

            window.scrollTo({
                top: Math.max(0, targetCenterOffset),
                behavior: 'smooth',
            });
        });
    });
</script>
